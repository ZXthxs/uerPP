<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.zx.play.mappers.TaskInfoMapper">


    <select id="getTaskInfoById" resultType="com.zx.play.bean.TaskInfo">

        select * from task_info where id = #{id}
    </select>
    <select id="getAllTasks" resultType="com.zx.play.bean.TaskInfo">

        select * from task_info
    </select>



</mapper>